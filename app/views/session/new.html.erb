<div class="container">
<div class="row">
<div class="custom-form">

<h1>Login</h1>

<%= form_tag login_path do %>

  <fieldset class="form-group">
  <%= label_tag :email %>
  <%= text_field_tag :email, nil, :class => 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, nil, :class => 'form-control' %>
  </fieldset>

  <%= submit_tag "Login", :class => 'btn btn-primary' %>
<% end %>


</div>
</div>
</div>
