<div class="container">
<h1>User Job Listings</h1>
<p id="notice"><%= notice %></p>

<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.user_id %></td>
        <td><%= job.description %></td>
        <td><%= job.position %></td>
        <td><%= link_to 'Details', job %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

