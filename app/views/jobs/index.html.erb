<div id="jobList">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Requirements</th>
      <th>Remuneration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.location %></td>
        <td><%= job.requirements %></td>
        <td><%= job.remuneration %></td>
        <td><%= link_to 'Details', job %></td>
      </tr>
    <% end %>
  </tbody>
</table>
