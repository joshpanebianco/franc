<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Applications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Videourl</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.user_id %></td>
        <td><%= application.videoURL %></td>
        <td><%= application.comments %></td>
        <td><%= link_to 'Show', job_application_path(application.job, application) %></td>
        <td><%= link_to 'Edit', edit_job_application_path(application.job, application) %></td>
        <td><%= link_to 'Destroy', job_application_path(application.job, application), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

