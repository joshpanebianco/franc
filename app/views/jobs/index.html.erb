<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>


<div class="jobSearchFields">
<div class="keyword_search">
<!--   General Search   -->
  <%= form_tag("/jobs", method: "get") do %>
    <%= label_tag(:q, "General Search:") %>
    <%= text_field_tag(:search_term, params[:search_term]) %>
    <%= submit_tag("Search") %>
<br>
<br>

  <!--   Company only Search   -->
    <%= label_tag(:q, "Company Search:", class:"test") %>
    <%= text_field_tag(:search_company, params[:search_company]) %>

<!--   Description only Search   -->
  <%= label_tag(:q, "Description Search:", class:"test") %>
  <%= text_field_tag(:search_description, params[:search_description]) %>
<br>
  <!--   Salary Search   -->
  <%= label_tag(:q, "Salary Search:", class:'test') %>
  <%= select("salary", 'salary_range_min', @salary_range_min) %>
  <%= select("salary", 'salary_range_max', @salary_range_max) %>

<br>
  <%= submit_tag("Search") %>
<% end %>
</div>
</div>

<br>

<div id="jobList">
<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Description</th>
      <th>Location</th>
      <th>Requirements</th>
      <th>Remuneration</th>
      <th>Position</th>
      <th>Contract</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company %></td>
        <td><%= job.description %></td>
        <td><%= job.location %></td>
        <td><%= job.requirements %></td>
        <td><%= job.remuneration %></td>
        <td><%= job.position %></td>
        <td><%= job.contract %></td>
        <td><%= link_to 'Details', job %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
